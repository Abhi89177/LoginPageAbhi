
@{
    ViewData["Title"] = "DashBoard";
}

<h1 style="text-align:center">DashBoard</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Webpage</title>
</head>
<body style="font-family: Arial, sans-serif; margin: 0; padding: 0;">

    <!-- Header -->
    <header style="background-color: #4CAF50; color: white; text-align: center; padding: 10px 0;">
        <h1>Welcome to My Webpage</h1>
    </header>

    <!-- Main Content Section -->
    <section style="padding: 20px;">
        <h2 style="color: #333;">About Me</h2>
        <p style="line-height: 1.6; color: #666;">
            Hello! I'm learning how to create a simple webpage using HTML and inline CSS.
            This page is a demonstration of my progress. Inline CSS allows me to style
            elements directly within the HTML tags, making the styling specific to each element.
        </p>

        <h2 style="color: #333;">Hobbies</h2>
        <ul style="color: #666;">
            <li>Reading books</li>
            <li>Exploring new technologies</li>
            <li>Playing video games</li>
        </ul>
    </section>

    <!-- Footer -->
    <footer style="background-color: #333; color: white; text-align: center; padding: 10px 0; position: fixed; width: 100%; bottom: 0;">
        <p>&copy; 2024 My Simple Webpage</p>
    </footer>

</body>
</html>





